{
  "name": "backend",
  "version": "1.0.0",
  "description": "Authentication API server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
